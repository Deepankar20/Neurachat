{
  "compilerOptions": {
    "target": "ES6", // Or later, like ESNext
    "module": "ESNext",
    "jsx": "react", // Use "react-jsx" if you're using React 17+ with JSX runtime
    "strict": true, // Optional but recommended
    "esModuleInterop": true, // For compatibility with ES modules
    "skipLibCheck": true, // Optional but helps with faster builds
    "moduleResolution": "node", // For resolving modules in Node.js style
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src" // Root directory for source files
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
